int main()
{
    
    float nilai, total, rata;
    int jumlah;
    cout << "Mencari Rata-rata nilai " << endl;
    cout << endl;
    cout << "Masukkan Jumlah Nilai : "; cin >> jumlah;
    cout << endl;
    for (int i = 1; i <= jumlah; i++) {
    cout << "Masukkan nilai : "; cin >> nilai;
    total = total + nilai;
}
    cout << endl;
    cout << "Total : " << total << endl;
    rata = total / jumlah;
    cout << "Rata-rata : " << rata;

    return 0;
}
